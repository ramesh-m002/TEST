public function getCourseOfferings($searchData)
{
    // ğŸ”´ IMPORTANT: $searchData MUST be an array
    if (!is_array($searchData)) {
        error_log('searchData is not an array');
        return false;
    }
    $jsonBody = wp_json_encode(
        $searchData,
        JSON_UNESCAPED_SLASHES | JSON_UNESCAPED_UNICODE
    );
    // Debug what you send
    error_log('REQUEST JSON: ' . $jsonBody);
    $response = wp_remote_post(
        $this->configJson->urls->courseOfferingURL,
        array(
            'method'  => 'POST',
            'timeout' => 30,
            'headers' => array(
                'Content-Type' => 'application/json; charset=utf-8',
                'Accept'       => 'application/json'
            ),
            'body' => $jsonBody
        )
    );
    if (is_wp_error($response)) {
        error_log($response->get_error_message());
        return false;
    }
    return wp_remote_retrieve_body($response);
}
